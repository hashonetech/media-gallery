<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MediaGallery" parent="Theme.Commons">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/extra_extra_light_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_extra_light_gray</item>
        <item name="colorSecondaryVariant">@color/secondary_light_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>

        <item name="android:fitsSystemWindows">false</item>

        <!--THEME -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>

        <!--Dark Theme Status - Disabled Dark mode-->
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <!--Dark Theme Status-->

        <!--StatusBar-->
        <!--Change StatusBar Color-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!--Show Content Inverted Color-->
        <item name="android:windowLightStatusBar">true</item>
        <!--Transparent StatusBar-->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--StatusBar-->

        <!--NavigationBar-->
        <!--Change BottomNavigationBar Color-->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <!--Transparent BottomNavigationBar-->
        <item name="android:windowTranslucentNavigation">false</item>
        <!--NavigationBar-->

        <!--Screen background color-->
        <item name="android:windowBackground">@color/white</item>
        <!--Screen background color-->

    </style>

    <style name="googlePhotosTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

</resources>